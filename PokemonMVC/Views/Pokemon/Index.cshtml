@model List<PokemonMVC.Models.Pokemon>
@{
    ViewBag.Title = "Pokémon List";
}

<h1>Pokémon List</h1>
<ul>
    @foreach (var pokemon in Model)
    {
        <li><a href="@Url.Action("Details", "Pokemon", new { name = pokemon.Name })">@pokemon.Name</a></li>
    }
</ul>

<div>
    @if (ViewBag.Page > 1)
    {
        <a href="@Url.Action("Index", "Pokemon", new { page = ViewBag.Page - 1 })">Previous</a>
    }
    @if (ViewBag.Page < ViewBag.TotalPages)
    {
        <a href="@Url.Action("Index", "Pokemon", new { page = ViewBag.Page + 1 })">Next</a>
    }
</div>
